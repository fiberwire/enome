{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "declarations",
        "outDir": "lib",
        "watch": true,
        "rootDir": ".",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "*"
            ]
        },
        "lib":[
            "esnext.asynciterable",
            "es2015"
        ]
    },
    "include":[
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "declarations",
        ".vscode"
    ]
}