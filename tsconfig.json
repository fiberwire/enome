{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "declarations",
        "outDir": "lib",
        "alwaysStrict": true,
        "mapRoot": "source-maps",
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "watch": true,
        "baseUrl": "./src",
        "lib":[
            "esnext.asynciterable",
            "es2015"
        ]
    },
    "include":[
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "declarations"
    ]
}