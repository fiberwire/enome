{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "out",
        "outDir": "out",
        "rootDir": ".",
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}