{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "out",
        "outDir": "out",
        "rootDir": ".",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}